<!DOCTYPE html>
<html lang="en">
<%- include("../parciales/head") %>
<body>
    <%- include("../parciales/header") %>

    <main class="formularioContacto">
        <div class="cuerpoFormularioContacto">
            <h1 class="tituloFormulario">Dejanos tu mensaje</h1>
            <form action="/contacto" method="POST">
                <div class="camposContacto">
                    <p class="errorFormulario"><%= locals.errores && errores.nombre ? errores.nombre.msg : "" %></p>
                    <input type="text" name="nombre" placeholder="Nombre" value="<%= locals.data && data.nombre ? data.nombre : '' %>" class="inputsFormulario">
                </div>
                <div class="camposContacto">
                    <p class="errorFormulario"><%= locals.errores && errores.mail ? errores.mail.msg : "" %></p>
                    <input type="text" name="mail" placeholder="Mail" value="<%= locals.data && data.mail ? data.mail : '' %>" class="inputsFormulario">
                </div>
                <div class="camposContacto">
                    <p class="errorFormulario"><!--<%= locals.errores && errores.telefono ? errores.telefono.msg : "" %>--></p>
                    <input type="text" name="telefono" placeholder="TelÃ©fono" value="<%= locals.data && data.telefono ? data.telefono : '' %>" class="inputsFormulario">
                </div>
                <div class="camposContacto">
                    <p class="errorFormulario"><%= locals.errores && errores.asunto ? errores.asunto.msg : "" %></p>
                    <input type="text" name="asunto" placeholder="Asunto" value="<%= locals.data && data.asunto ? data.asunto : '' %>" class="inputsFormulario">
                </div>
                <div class="camposContacto">
                    <p class="errorFormulario"><%= locals.errores && errores.mensaje ? errores.mensaje.msg : "" %></p>
                    <textarea name="mensaje" placeholder="Dejanos tu mensaje" class="inputsFormulario"><%= locals.data && data.mensaje ? data.mensaje : '' %></textarea>
                </div>
                <div class="botonesContacto">
                    <button type="submit" class="botonContacto">Enviar</button>
                    <button type="reset" class="botonContacto">Cancelar</button>
                </div>
            </form>
        </div>
    </main>

    <%- include("../parciales/footer") %>   
</body>
</html>
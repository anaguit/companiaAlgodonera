<!DOCTYPE html>
<html lang="en">
<%- include("../parciales/head") %>
<body>
    <%- include("../parciales/header") %>
    <main>
        <h2>Productos de la categoria</h2>
        <div class="listadoProductos">
            <% for(let producto of productos){ %>
                <div class="articuloListado">
                    <p><a href="/producto/<%= producto.codigo %>"><%= producto.nombre %> <%= producto.modelo %></a></p>
                    <div class="imagenArticulo">
                        <img src="/imagenes/<%= producto.foto %>" class="imagen">
                    </div>
                    <div class="descripcionArticulo">
                        <p><%= producto.descripcion %></p>
                    </div>
                </div>
            <% } %>
        </div>
    </main>
    <%- include("../parciales/footer") %>
</body>
</html>